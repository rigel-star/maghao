<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >


    <ImageView
        android:id="@+id/request_type_icon"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@raw/icon_settings"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/request_type_name"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="Request Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/service_type_msg"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="You are about to inform nearby Barbers that you need Hair Cut service at your home."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <TextView
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:textSize="10sp"
        android:textAlignment="center"
        android:text="@string/note_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/send_service_request_button"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:background="@drawable/buttons_background_app_color"
        android:text="Send Request"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/request_cancel_button"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textColor="#FF7E00"
        android:background="@android:color/transparent"
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>